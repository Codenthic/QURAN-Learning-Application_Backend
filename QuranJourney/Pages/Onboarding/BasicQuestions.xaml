        --><!-- MAIN CONTENT --><!--
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="25" Padding="20,10" Margin="0,0,0,80">

                --><!-- Duo image + speech bubble --><!--
                <Grid ColumnDefinitions="Auto, *" ColumnSpacing="10" VerticalOptions="Center" Padding="10,0">
                    <Image Source="cartoonremovebg.png"
                           HeightRequest="90"
                           WidthRequest="90"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"/>

                    <Frame Grid.Column="1"
                           BackgroundColor="White"
                           BorderColor="#E0E0E0"
                           CornerRadius="18"
                           Padding="15,10"
                           HasShadow="False"
                           VerticalOptions="Center"
                           HorizontalOptions="Start">
                        <Label x:Name="QuestionLabel"
                               Text="Loading question..."
                               FontSize="16"
                               TextColor="#555555"
                               FontFamily="Sans-Serif"
                               VerticalTextAlignment="Center"
                               HorizontalTextAlignment="Center"/>
                    </Frame>
                </Grid>

                --><!-- Language options --><!--
                <CollectionView x:Name="OptionsList"
                SelectionMode="Single"
                SelectionChanged="OptionsList_SelectionChanged">

                    --><!-- ðŸ‘‡ This is the missing part --><!--
                    <CollectionView.ItemsLayout>
                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="12"/>
                        --><!-- 12 = gap between each option; change to 15 or 20 if you want bigger spacing --><!--
                    </CollectionView.ItemsLayout>

                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="local:OptionModel">
                            <Frame Padding="15,12"
               Margin="0"
               CornerRadius="14"
               BorderColor="#E0E0E0"
               BackgroundColor="White"
               HasShadow="False">
                                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                                    <Image Source="{Binding Flag}"
                       HeightRequest="28"
                       WidthRequest="40"
                       VerticalOptions="Center" />
                                    <Label Text="{Binding Text}"
                       FontSize="16"
                       FontAttributes="Bold"
                       TextColor="#333333"
                       VerticalOptions="Center" />
                                </Grid>

                                --><!-- ðŸ‘‡ Add this to highlight selected item --><!--
                                <Frame.Triggers>
                                    <DataTrigger TargetType="Frame"
                             Binding="{Binding IsSelected}"
                             Value="True">
                                        <Setter Property="BackgroundColor" Value="#58CC02"/>
                                        --><!-- Green highlight --><!--
                                        <Setter Property="BorderColor" Value="#58CC02"/>
                                    </DataTrigger>
                                </Frame.Triggers>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>

            </VerticalStackLayout>
        </ScrollView>
        --><!-- FOOTER --><!--
        <Grid Grid.Row="2" Padding="20,10,20,30">
            <Button x:Name="ContinueButton"
                    Text="CONTINUE"
                    FontAttributes="Bold"
                    FontSize="18"
                    CornerRadius="12"
                    HeightRequest="55"
                    BackgroundColor="#E5E5E5"
                    TextColor="White"
                    IsEnabled="False"
                    Clicked="ContinueButton_Clicked"/>
        </Grid>

    </Grid>-->
</ContentPage>