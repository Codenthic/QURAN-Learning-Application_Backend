            HeightRequest="14"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="Center">
                <Grid x:Name="ProgressBarGrid"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">
                    <BoxView x:Name="ProgressFill"
                     BackgroundColor="#58CC02"
