<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuranJourney.Pages.Onboarding.WelcomeScreen"
             BackgroundColor="White">

    <Grid RowDefinitions="*,Auto">

        <!-- MAIN CONTENT -->
        <Grid Grid.Row="0">

            <VerticalStackLayout Padding="20,10" Spacing="30">

                <!-- Back button -->
                <Image Source="back.png"
                       HeightRequest="28" WidthRequest="28">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BackCommand}" />
                    </Image.GestureRecognizers>
                </Image>

            </VerticalStackLayout>

            <Grid VerticalOptions="Center" HorizontalOptions="Center">

                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center" Spacing="25">

                    <!-- Speech Bubble -->
                    <Frame BackgroundColor="#FFFFFF" BorderColor="#E0E0E0"
                           CornerRadius="18" Padding="12">
                        <Label Text="{Binding SpeechText}"
                               FontSize="16" TextColor="#555" />
                    </Frame>

                    <!-- GIF WebView -->
                    <WebView WidthRequest="200" HeightRequest="150">
                        <WebView.Source>
                            <HtmlWebViewSource Html="{Binding GifHtml}" />
                        </WebView.Source>
                    </WebView>

                </VerticalStackLayout>
            </Grid>
        </Grid>

        <!-- CONTINUE BUTTON -->
        <Button Grid.Row="1"
                Text="CONTINUE"
                BackgroundColor="#58CC02"
                TextColor="White"
                FontAttributes="Bold"
                HeightRequest="50"
                CornerRadius="25"
                Margin="20"
                Command="{Binding ContinueCommand}" />

    </Grid>

</ContentPage>
