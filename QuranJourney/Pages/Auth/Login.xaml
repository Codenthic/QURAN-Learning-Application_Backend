<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuranJourney.Pages.Auth.Login">

    <Grid RowDefinitions="*,Auto">

        <!-- Main Content -->
        <ScrollView Grid.Row="0">
            <StackLayout Padding="20" Spacing="30">

                <!-- Header -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Close Button -->
                    <Label Text="X"
                           FontSize="20"
                           HeightRequest="18"
                           VerticalOptions="Center"
                           HorizontalOptions="Start"
                           Grid.Column="0"
                           TextColor="#D1CDCD"/>

                    <!-- Header Title -->
                    <Label Text="Enter Your Details"
                           FontSize="20"
                           TextColor="#D1CDCD"
                           FontAttributes="Bold"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Grid.Column="1"/>

                </Grid>

                <!-- Input Box Container -->
                <Frame BackgroundColor="#F0F0F0" 
                       CornerRadius="10"
                       Padding="20"
                       HasShadow="False">

                    <StackLayout Spacing="15">

                        <!-- Username -->
                        <Grid VerticalOptions="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Entry Placeholder="Username"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"
                                   FontSize="16"
                                   Grid.Column="0"/>

                        </Grid>

                        <!-- Password Row -->
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="Password"
                                   IsPassword="True"
                                   BackgroundColor="Transparent"
                                   TextColor="Black"
                                   FontSize="16"
                                   Margin="0"
                                   Grid.Column="0">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroup x:Name="PasswordEntryStates">
                                        <VisualState x:Name="Normal">
                                            <VisualState.Setters>
                                                <Setter Property="BackgroundColor" Value="Transparent" />
                                            </VisualState.Setters>
                                        </VisualState>
                                    </VisualStateGroup>
                                </VisualStateManager.VisualStateGroups>
                            </Entry>
                            <Button Text="ðŸ‘"
                                    BackgroundColor="Transparent"
                                    Grid.Column="1"
                                    Clicked="OnShowPasswordClicked"/>
                        </Grid>

                    </StackLayout>
                </Frame>

                <!-- Sign In Button -->
                <Button Text="Sign In"
                        BackgroundColor="#CCCCCC"
                        TextColor="#ADA8A8"
                        CornerRadius="10"
                        FontAttributes="Bold"
                        FontSize="22"
                        HeightRequest="50"/>

                <!-- Forgot Password -->
                <Button Text="Forgot Password?"
                        BackgroundColor="Transparent"
                        TextColor="#1F8EC2"
                        FontSize="19"
                        FontAttributes="None"
                        Padding="0"
                        Margin="0,-24,0,0"
                        HorizontalOptions="Center"/>
            </StackLayout>
        </ScrollView>

        <!-- Footer Section -->
        <StackLayout Grid.Row="1" 
                     Padding="20,10,20,20" 
                     Spacing="15"
                     BackgroundColor="White">

            <!-- Social Login Buttons -->
            <Grid ColumnDefinitions="*,*" 
      ColumnSpacing="15">

                <!-- Facebook Button (Left Side) -->
                <Frame Grid.Column="0"
           BackgroundColor="White"
           BorderColor="#E0E0E0"
           CornerRadius="10"
           Padding="15,12"
           HasShadow="False">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <!-- Facebook Icon -->
                        <Label Text="f"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="#1877F2"
                   VerticalOptions="Center"
                   Grid.Column="0"/>
                        <!-- Facebook Text -->
                        <Label Text="FACEBOOK"
                   TextColor="#1877F2"
                   FontSize="14"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   Grid.Column="1"/>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnFacebookTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>

                <!-- Google Button (Right Side) -->
                <Frame Grid.Column="1"
           BackgroundColor="White"
           BorderColor="#E0E0E0"
           CornerRadius="10"
           Padding="15,12"
           HasShadow="False">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                        <!-- Google Icon -->
                        <Label Text="G"
                   FontSize="16"
                   FontAttributes="Bold"
                   TextColor="Black"
                   VerticalOptions="Center"
                   Grid.Column="0"/>
                        <!-- Google Text -->
                        <Label Text="GOOGLE"
                   TextColor="Black"
                   FontSize="14"
                   FontAttributes="Bold"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   Grid.Column="1"/>
                    </Grid>
                    <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnGoogleTapped"/>
                    </Frame.GestureRecognizers>
                </Frame>
            </Grid>

            <!-- Privacy Policy Text -->
            <Label Text="By signing in Quran Learning Application, you agree to our Terms and  Privacy Policy"
                   FontSize="12"
                   TextColor="#808080"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnPrivacyPolicyTapped"/>
                </Label.GestureRecognizers>
            </Label>
        </StackLayout>
    </Grid>
</ContentPage>