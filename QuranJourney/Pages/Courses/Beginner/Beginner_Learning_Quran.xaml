                <WebView.Source>
                    <HtmlWebViewSource>
                        <HtmlWebViewSource.Html>
                            <![CDATA[
              <html>
                  <body style="margin:0; padding:0; width:100vw; height:100vh; background:transparent;">
                      <img src="nicelydone.gif"
