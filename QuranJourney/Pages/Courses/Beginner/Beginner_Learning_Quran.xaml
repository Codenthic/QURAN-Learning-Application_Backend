                  </body>
              </html>
              ]]>
                        </HtmlWebViewSource.Html>
                    </HtmlWebViewSource>
                </WebView.Source>
            </WebView>
        </Frame>

        <!-- excellent Box OVERLAY -->
        <Frame x:Name="excellentBox"
      Grid.RowSpan="3"
      Padding="0"
      CornerRadius="0"
      IsVisible="False"
      Margin="0,-110,0,0"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="FillAndExpand"
      BackgroundColor="Transparent"
      HasShadow="False"
      ZIndex="0">
            <!-- Behind button -->
            <WebView
      HorizontalOptions="FillAndExpand"
      VerticalOptions="FillAndExpand"
      BackgroundColor="Transparent"
      InputTransparent="True">
                <WebView.Source>
                    <HtmlWebViewSource>
                        <HtmlWebViewSource.Html>
                            <![CDATA[
      <html>
          <body style="margin:0; padding:0; width:100vw; height:100vh; background:transparent;">
              <img src="excellent.gif"
                   style="width:100vw; height:100vh; object-fit:cover;" />
          </body>
      </html>
      ]]>
                        </HtmlWebViewSource.Html>
                    </HtmlWebViewSource>
                </WebView.Source>
            </WebView>
        </Frame>

        <!-- Higher than AwesomeBox -->
        <Frame x:Name="AwesomeBox"
 Grid.RowSpan="3"
 Padding="0"
         Margin="0,-110,0,0"
 CornerRadius="0"
 IsVisible="False"
 HorizontalOptions="FillAndExpand"
 VerticalOptions="FillAndExpand"
 BackgroundColor="Transparent"
 HasShadow="False"
 ZIndex="0">

            <WebView
  HorizontalOptions="FillAndExpand"
  VerticalOptions="FillAndExpand"
  BackgroundColor="Transparent"
  InputTransparent="True">
                <WebView.Source>
                    <HtmlWebViewSource>
                        <HtmlWebViewSource.Html>
                            <![CDATA[
              <html>
                  <body style="margin:0; padding:0; width:100vw; height:100vh; background:transparent;">
                      <img src="awesome.gif"
                           style="width:100vw; height:100vh; object-fit:cover;" />
                  </body>
              </html>
              ]]>
                        </HtmlWebViewSource.Html>
                    </HtmlWebViewSource>
                </WebView.Source>
            </WebView>
        </Frame>

        <!-- Amazing Box OVERLAY -->
        <Frame x:Name="AmazingBox"
      Grid.RowSpan="3"
      Padding="0"
      CornerRadius="0"
      IsVisible="False"
      Margin="0,-110,0,0"
      HorizontalOptions="FillAndExpand"
      VerticalOptions="FillAndExpand"
      BackgroundColor="Transparent"
      HasShadow="False"
      ZIndex="0">
            <!-- Behind button -->
            <WebView
      HorizontalOptions="FillAndExpand"
      VerticalOptions="FillAndExpand"
      BackgroundColor="Transparent"
      InputTransparent="True">
                <WebView.Source>
                    <HtmlWebViewSource>
                        <HtmlWebViewSource.Html>
                            <![CDATA[
      <html>
          <body style="margin:0; padding:0; width:100vw; height:100vh; background:transparent;">
              <img src="amazing.gif"
                   style="width:100vw; height:100vh; object-fit:cover;" />
          </body>
      </html>
      ]]>
                        </HtmlWebViewSource.Html>
                    </HtmlWebViewSource>
                </WebView.Source>
            </WebView>
        </Frame>
    </Grid>
</ContentPage>