<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:QuranJourney"
             x:Class="QuranJourney.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Shadow x:Key="ButtonShadow"
                Brush="#58CC02"
                Offset="0,6"
                Opacity="0.4"
                Radius="8"/>
            <Color x:Key="PrimaryColor">#1a73e8</Color>
            <Color x:Key="Gray100">#f8f9fa</Color>
            <Color x:Key="Gray300">#dee2e6</Color>
            <Color x:Key="Gray600">#6c757d</Color>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>

